{
  "name": "physic_lab-new",
  "version": "1.0.3",
  "description": "Лабораторная работа по физике",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "make": "electron-builder make",
    "publish": "electron-builder build -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jag-k-stud/physic_lab-new.git"
  },
  "keywords": [],
  "author": {
    "name": "Jag_k",
    "email": "jag-k58@ya.ru"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jag-k-stud/physic_lab-new/issues"
  },
  "homepage": "http://jag-k-stud.github.io/physic_lab-new/",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "${env.PRODUCT_NAME}",
    "copyright": "Copyright © 2020 ${author}",
    "artifactName": "${productName}-${os}.${ext}",
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "directories": {
      "output": "./out"
    },
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "deb",
      "category": "Education"
    }
  }
}
